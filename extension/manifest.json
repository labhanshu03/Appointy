{
  "manifest_version": 3,
  "name": "Content Saver",
  "version": "1.0.0",
  "description": "Save photos, text, todos, products, bookmarks, and YouTube videos with AI-powered categorization",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["crop-overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
